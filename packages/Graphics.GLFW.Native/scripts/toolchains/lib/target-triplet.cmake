if(CMAKE_SYSTEM_NAME STREQUAL "Linux" AND CMAKE_SYSTEM_PROCESSOR STREQUAL "arm")
    set(_CLANG_TARGET "${CMAKE_SYSTEM_PROCESSOR}-unknown-linux-gnueabi")
elseif(CMAKE_SYSTEM_NAME STREQUAL "Linux")
    set(_CLANG_TARGET "${CMAKE_SYSTEM_PROCESSOR}-unknown-linux-gnu")
elseif(CMAKE_SYSTEM_NAME STREQUAL "Windows")
    set(_CLANG_TARGET "${CMAKE_SYSTEM_PROCESSOR}-pc-windows-gnu")
elseif(CMAKE_SYSTEM_NAME STREQUAL "Darwin")
    set(_CLANG_TARGET "${CMAKE_SYSTEM_PROCESSOR}-apple-darwin")
endif()
